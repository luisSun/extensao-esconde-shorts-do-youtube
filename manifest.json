{
    "manifest_version": 3,
    "name": "Hide Youtube Shorts",
    "description": "Hide Youtube Shorts on the browser (Manifest V3).",
    "version": "1.0.0",
    "action": {
      "default_title": "Hide Youtube Shorts",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
            "https://www.youtube.com/*",
            "https://m.youtube.com/*"
          ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  